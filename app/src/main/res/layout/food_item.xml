<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/food_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:background="@drawable/imageview_style"
        android:foregroundGravity="center"
        android:scaleType="fitCenter"></ImageView>
    <!--    <com.example.perfectnavigationassistant.RoundImageView-->
    <!--        android:id="@+id/food_img"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:layout_marginRight="10dp"-->
    <!--        android:layout_weight="3"-->
    <!--        android:scaleType="fitXY"-->
    <!--        android:background="@color/white"-->
    <!--        android:foregroundGravity="center"></com.example.perfectnavigationassistant.RoundImageView>-->

    <TextView
        android:id="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/browse_textview_style2"
        android:gravity="clip_vertical|center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/browse_textview_style"
        android:orientation="horizontal"
        tools:layout_marginRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location16" />

        <TextView
            android:id="@+id/food_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="clip_vertical|center_vertical"
            android:textColor="@color/deep_gray"
            android:textSize="12sp"></TextView>
    </LinearLayout>


</LinearLayout>